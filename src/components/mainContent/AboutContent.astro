---
import { getLangFromUrl } from "../../i18n/utils";

import { Image } from "astro:assets";
import refaelImage from "../../assets/misc/refael2.jpg";

import { getEntry, render } from "astro:content";

const lang = getLangFromUrl(Astro.url);

const infoData = await getEntry('aboutInfo', lang);
const { Content } = await render(infoData);
---

<section
  class="content-wrapper mx-auto flex max-w-5xl flex-col items-center gap-10 md:flex-row md:items-start"
>
  <div class="">
    <Image
      src={refaelImage}
      alt="רפאל כהן"
      class="aspect-square rounded-3xl object-cover"
    />
  </div>

  <div>
    <Content />
  </div>
</section>

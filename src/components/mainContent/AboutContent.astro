---
import { getLangFromUrl } from "../../i18n/utils";

import { Image } from "astro:assets";
import refaelImage from "../../assets/misc/refael2.jpg";

import { getEntry } from "astro:content";

const lang = getLangFromUrl(Astro.url);

const entry = await getEntry(lang, "about");
const { Content } = await entry.render();
---

<section
  class="content-wrapper mx-auto flex max-w-5xl flex-col items-center gap-10 md:flex-row md:items-start"
>
  <div class="">
    <Image
      src={refaelImage}
      alt="רפאל כהן"
      class="aspect-square rounded-3xl object-cover"
    />
  </div>

  <div>
    <Content />
  </div>
</section>

---
import {
  getLangFromUrl,
  useTranslations,
  useTranslatedPath,
} from "../i18n/utils";

import Link from "@components/Link.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<div
  class="flex flex-col items-center gap-8 bg-nav bg-[url('../assets/bg/KV2A5892.JPG')] bg-cover bg-center p-16 text-center text-background bg-blend-soft-light"
>
  <h2 class="text-4xl font-bold tracking-wider">{t("donation.title")}</h2>
  <p class="text-xl text-primary-foreground">{t("donation.body")}</p>
  <Link
    href={translatePath("/donate")}
    text={t("donation.btn")}
    class="bg-accent text-accent-foreground"
  />
</div>

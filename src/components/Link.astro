---
import type { HTMLAttributes } from "astro/types";

import { Icon } from "astro-icon/components";

interface Props extends HTMLAttributes<"a"> {
  href: string;
  text: string;
  icon?: string;
  isBorder?: boolean;
  class?: string;
}

const { href, text, icon, isBorder, class: className, ...attrs } = Astro.props;
---

<a href={href} class:list={["btn", { border: isBorder }, className]} {...attrs}>
  {text}
  {icon && <Icon name={icon} class="w-6" />}
</a>

<style>
  .border {
    @apply border-2 border-blue-400;
  }
</style>
